{% extends 'base.html.twig' %}

{% block title %}
        {{ 'account.information'|trans }}
{% endblock %}


{% block body %}
<div class="page-header">
	<h1>{{ customer.name }}</h1>
  <h2> {{ 'account.information'|trans }}</h2>
</div>

<div>
	<form class="form-horizontal" role="form" action="" method="post" {{ form_enctype(form) }}>
    <div class="form-group">
      {{ form_label(form.street, 'address.address' | trans ~ 'colon' | trans, {'label_attr': {'class': 'control-label col-sm-2'}}) }}
      <div class="col-sm-10">
      {{ form_widget(form.street, { 'attr': {'class': 'form-control'} }) }}
      </div>
    </div>
    <div class="form-group">
      {{ form_label(form.zip_code, 'address.zip_code' | trans ~ 'colon' | trans, {'label_attr': {'class': 'control-label col-sm-2'}}) }}
      <div class="col-sm-10">
      {{ form_widget(form.zip_code, { 'attr': {'class': 'form-control'} }) }}
      </div>
    </div>
    <div class="form-group">
      {{ form_label(form.city, 'address.city' | trans ~ 'colon' | trans, {'label_attr': {'class': 'control-label col-sm-2'}}) }}
      <div class="col-sm-10">
      {{ form_widget(form.city, { 'attr': {'class': 'form-control'} }) }}
      </div>
    </div>
    <div class="form-group">
      {{ form_label(form.country, 'address.country' | trans ~ 'colon' | trans, {'label_attr': {'class': 'control-label col-sm-2'}}) }}
      <div class="col-sm-10">
      {{ form_widget(form.country, { 'attr': {'class': 'form-control'} }) }}
      </div>
    </div>
    <div class="form-group">
      {{ form_label(form.iban, 'address.iban' | trans ~ 'colon' | trans, {'label_attr': {'class': 'control-label col-sm-2'}}) }}
      <div class="col-sm-10">
      {{ form_widget(form.iban, { 'attr': {'class': 'form-control'} }) }}
      </div>
    </div>
    <div class="form-group">
      {{ form_label(form.vat_number, 'address.vat_number' | trans ~ 'colon' | trans, {'label_attr': {'class': 'control-label col-sm-2'}}) }}
      <div class="col-sm-10">
      {{ form_widget(form.vat_number, { 'attr': {'class': 'form-control'} }) }}
      </div>
    </div>
  </form>
</div>


{% endblock %}
